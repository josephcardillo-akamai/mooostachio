
  <table class="table">
    <thead>
      <tr>
        <th scope="col">###</th>
        <th scope="col" class="right-align">Amount</th>
        <th scope="col">Split</th>
        <th scope="col">Date</th>
        <th scope="col">Status</th>
        <th scope="col">Type</th>
        <th scope="col">Category</th>
        <th scope="col">Location</th>

        <th scope="col">Note</th>
      </tr>
    </thead>
    <tbody class="table-row">
      <% @mentries.reverse.each do |mentry| %>
      <% if @maccount.name == mentry.maccount.name %>
        <% if current_user.id == mentry.user_id %>
          <tr>
            <td scope="row"><%= link_to mentry.id, mentry_path(mentry.id) %></td>
            <td scope="row" align="right"><%= number_to_currency(mentry.amount) %></td>
            <td scope="row"><%= mentry.split %></td>
            <td scope="row"><%= mentry.date %></td>
            <td scope="row"><%= mentry.mstatus.name %></td>
            <td scope="row"><%= mentry.mtype.name %></td>
            <td scope="row"><%= mentry.mcategory.name %></td>
            <td scope="row"><%= mentry.mlocation.name %></td>
            <td scope="row"><%= mentry.note %></td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
    </tbody>
  </table>
