<div class="form-container1 form-font">
  <div class="form-container2">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-outline-dark my-2 my-sm-0"  %>
      </div>
    <% end %>

    <div>
        <%= image_tag("logo_size_icon.png", class: "moose-image", id: "moose-image") %>
    </div>
    
    <%= render "devise/shared/links" %>

  </div>
</div>
