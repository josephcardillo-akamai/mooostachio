<div class="modal flash-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Mooostach.io</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
            <p class="notice"><%= flash.notice %></p>
            <p class="alert"><%= flash.alert %></p>
      </div>
      <div class="modal-footer close-error-modal">
        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
        <button type="button" class="btn btn-primary" id="close-error-modal" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


<% if flash[:notice] %>
<script>
    $(document).ready(function() {
    if($('.flash-modal').length) {
      $('.flash-modal').modal('show');
      }
    })

    $('#close-error-modal').click(function() {
        $('.modal').hide();
    });
</script>
<% end %>
