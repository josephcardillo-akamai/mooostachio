// alert('hi!')
var select_transfer = $('#transfer').val();
var select_amount = $('#mentry_amount').val();
var select_status = $('#mentry_mstatus_id').val();
var select_account = $('#mentry_maccount_id').val();
var select_category = $('#mentry_mcategory_id').val();
var select_location = $('#mentry_mlocation_id').val();

if (select_transfer == 3) {
  // alert("You selected transfer!");
  $('#transfer-slide-out').replaceWith("<%= j render 'mentries/transfer' %>");
  $('#mentry_amount').val(select_amount * -1);
  $('#mentry_mstatus_id').val(select_status);
  $('#mentry_maccount_id').val(select_account);
  $('#mentry_mcategory_id').val(select_category);
  $('#mentry_mlocation_id').val(select_location);
}
else {
  // alert("What's going on here?");
  $('#maccount-balances').replaceWith("<%= j render 'dashboard/maccount_balances' %>")
  $('#mentry_amount').val('');
  $('#spending-breakdown').replaceWith("<%= j render 'dashboard/spending' %>")
};

